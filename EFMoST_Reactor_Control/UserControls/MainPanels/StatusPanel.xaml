                <TextBlock x:Name="l_gassensor_Temp" Text="T = 0,0 °C" Margin="740,101,0,0"/>
                <TextBlock x:Name="l_gassensor_Press" Text="p = 0 mbar" Margin="740,121,0,0"/>
                <TextBlock x:Name="l_gassensor_Humid" Text="H = 0 %" Margin="740,141,0,0"/>

                <!-- Medium Ablauf -->
