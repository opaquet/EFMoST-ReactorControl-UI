                <Path  StrokeThickness="1" Stroke="Black" Data="M570,415 L580,410"/>
                <Path  StrokeThickness="1" Stroke="Black" Data="M570,535 L580,540"/>
                <Path  StrokeThickness="1" Stroke="Black" Data="M570,545 L580,540"/>
