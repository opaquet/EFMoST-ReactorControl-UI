                <Path  StrokeThickness="2" Stroke="Black" Data="M160,28 L178,40"/>
                <Path  StrokeThickness="2" Stroke="Black" Data="M160,52 L178,40"/>
                <Path  StrokeThickness="1" Fill="White"  Stroke="Black" Data="M130,-15 H200 V25 H130 Z "/>
